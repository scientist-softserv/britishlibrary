          <% end %>
        </div>
        <div class="col-xs-6 col-sm-4 text-center">
          <%= link_to "//#{host_for('nms')}" do %>
            <%= image_tag("splash-logos/NMSlogo1.png", class: "tenant-logo", alt: "National Museum of Scotland") %>
          <% end %>
        </div>
        <div class="col-xs-6 col-sm-4 text-center">
          <%= link_to "//#{host_for('bl')}" do %>
             <%= image_tag("splash-logos/britishlibrarylogo.png", class: "tenant-logo", alt: "British Library") %>
          <% end %>
        </div>
        <div class="col-xs-6 col-sm-4 text-center">
          <%= link_to "//#{host_for('kew')}" do %>
            <%= image_tag("splash-logos/Kew_Logo.png", class: "tenant-logo", alt: "Kew Royal Botanic Gardens") %>
